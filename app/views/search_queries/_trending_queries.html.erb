  <div>
    <h1 class="text-xl font-extrabold my-4">
      Trending Queries
    </h1>
    <div class="flex flex-wrap">
      <% trending_queries.each do |query| %>
        <%= link_to search_queries_path(query: query[0]), class: "text-blue-600 text-md font-semibold truncate hover:bg-gray-200 shadow p-6 max-w-1/4", data: { turbo_action: 'advance'} do %>
          <div>
            <h3 class="text-green-600 text-md font-extrabold truncate">
              <%= query[0] %>
            </h3>
            <p class="text-gray-600 text-md font-semibold">
              Queried by <%= pluralize(query[1], 'user') %>
            </p>
          </div>
        <% end %>
      <% end %>
  </div>
